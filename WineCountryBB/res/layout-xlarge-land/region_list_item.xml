<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:padding="10dp"
  android:background="@drawable/edges"
  android:layoutAnimation="@anim/layout_bottom_to_top_slide_70">
  
<TextView 
	android:text="@+id/TextView01" 
	android:id="@+id/_id_Region" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:visibility="gone"></TextView>
<ImageView
	android:text="@+id/Button01" 
	android:id="@+id/Grapes" 
	android:layout_below="@id/_id_Region" 
	android:layout_width="70dp" 
	android:layout_height="70dp"
	android:background="@drawable/grapes"></ImageView>
<TextView 
	android:text="Chaddsford Winery" 
	android:textColor="@color/color_gold"
	android:textSize="40sp"
	android:id="@+id/ItemName" 
	android:layout_toRightOf="@id/Grapes" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:paddingTop="5sp"></TextView>
<TextView 
	android:text="1024 Wheatland Drive, Coatesville, PA 19320" 
	android:textSize="30sp"
	android:id="@+id/ItemAddress" 
	android:layout_marginLeft="23dp"
	android:paddingTop="5dp"
	android:layout_below="@id/ItemName" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"></TextView>


</RelativeLayout>
