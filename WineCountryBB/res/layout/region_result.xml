<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/winery"
  android:paddingBottom="20dp">
<TextView 
	android:text="J. Maki Winery at French Creek Ridge Vineyards" 
	android:textColor="@color/title"
	android:textSize="20sp"
	android:id="@+id/ResultName" 
	android:padding="15dp"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:background="@color/opaqueGreen"
	android:gravity="center_horizontal"></TextView>
<ImageButton 
	android:id="@+id/DelButtonRegion_Result" 
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content"
	android:layout_toRightOf="@+id/ResultName"
	android:layout_marginTop="15dp"
	android:background="@drawable/delete"
	android:clickable="true"
	android:visibility="gone"
	android:focusable="false"></ImageButton>

<ScrollView 
	android:id="@+id/ScrollView01" 
	android:layout_below="@id/ResultName" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
		<RelativeLayout 
			android:id="@+id/RelativeLayout01" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content">
		<TableLayout 
			android:id="@+id/TableLayout01" 
			android:layout_below="@id/ResultName" 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:paddingLeft="25dp"
			android:background="@color/opaqueGreen">
		<TableRow 
			android:id="@+id/TableRow01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				<TextView 
					android:text="Address:" 
					android:textColor="@color/color_gold"
					android:id="@+id/ResultAddressLbl" 
					android:paddingRight="10dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:gravity="right"></TextView>
				<TextView 
					android:text="1853 Wrightstown Rd, Washington Crossing, PA 18977" 
					android:id="@+id/Result_Address" 
					android:paddingRight="115dp"
					android:paddingBottom="8dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"></TextView></TableRow>
		<TableRow 
			android:id="@+id/TableRow02" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				<TextView 
					android:text="Email:" 
					android:textColor="@color/color_gold"
					android:id="@+id/TextView01"
					android:paddingRight="10dp" 
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:gravity="right"></TextView>
				<TextView 
					android:text="askstargazers@stargazersvineyard.com" 
					android:id="@+id/Result_Email" 
					android:paddingRight="115dp"
					android:paddingBottom="8dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"></TextView></TableRow>
		<TableRow 
			android:id="@+id/TableRow03" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				<TextView 
					android:text="Website:" 
					android:textColor="@color/color_gold"
					android:id="@+id/TextView03" 
					android:paddingRight="10dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:gravity="right"></TextView>
				<TextView 
					android:text="http://www.cardinalhollowwinery.com" 
					android:id="@+id/Result_Website" 
					android:paddingRight="115dp"
					android:paddingBottom="8dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"></TextView></TableRow>
		<TableRow 
			android:id="@+id/TableRow04" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				<TextView 
					android:text="Phone:" 
					android:textColor="@color/color_gold"
					android:id="@+id/TextView05" 
					android:paddingRight="10dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:gravity="right"></TextView>
				<TextView 
					android:text="215-794-7188" 
					android:id="@+id/Result_Phone" 
					android:paddingRight="115dp"
					android:paddingBottom="8dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"></TextView></TableRow>
		<TableRow 
			android:id="@+id/TableRow05" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">
				<TextView 
					android:text="Hours:" 
					android:textColor="@color/color_gold"
					android:id="@+id/TextView07" 
					android:paddingRight="10dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					android:gravity="right"></TextView>
				<TextView 
					android:text="" 
					android:id="@+id/Result_Hours" 
					android:paddingRight="115dp"
					android:paddingBottom="8dp"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"></TextView></TableRow>
</TableLayout>
<TextView 
	android:text="Touch any of the results for additional features" 
	android:id="@+id/Result_Instructions" 
	android:background="@color/opaqueGreen"
	android:paddingLeft="15dp"
	android:paddingTop="20dp"
	android:paddingBottom="15dp"
	android:layout_below="@id/TableLayout01" 
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"></TextView>
</RelativeLayout>
</ScrollView>

</RelativeLayout>
